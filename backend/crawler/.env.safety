# ============================================
# LINKEDIN CRAWLER SAFETY CONFIGURATION
# ============================================
# Konfigurasi ini untuk menghindari deteksi bot oleh LinkedIn

# ============================================
# DELAY SETTINGS (dalam detik)
# ============================================

# Delay antar aksi di dalam 1 profil (scroll, klik, dll)
MIN_DELAY=2.0          # Minimal 2 detik
MAX_DELAY=5.0          # Maksimal 5 detik

# Delay antar profil (PENTING!)
PROFILE_DELAY_MIN=10.0  # Minimal 10 detik antar profil
PROFILE_DELAY_MAX=20.0  # Maksimal 20 detik antar profil

# ============================================
# RATE LIMITING
# ============================================

# Maksimal profil per hari (RECOMMENDED: 50-100)
MAX_PROFILES_PER_DAY=50

# Maksimal profil per jam
MAX_PROFILES_PER_HOUR=10

# Jam kerja (format 24 jam, misal: 9-17 = jam 9 pagi - 5 sore)
# Crawler hanya jalan di jam ini untuk simulasi manusia
WORK_HOURS_START=9
WORK_HOURS_END=17

# Hari kerja (1=Senin, 7=Minggu)
# Contoh: 1,2,3,4,5 = Senin-Jumat saja
WORK_DAYS=1,2,3,4,5

# ============================================
# SAFETY FEATURES
# ============================================

# Pause setiap X profil (untuk istirahat seperti manusia)
PAUSE_EVERY_N_PROFILES=10
PAUSE_DURATION_MIN=60   # Istirahat minimal 1 menit
PAUSE_DURATION_MAX=180  # Istirahat maksimal 3 menit

# Random stop (kadang berhenti tiba-tiba seperti manusia)
RANDOM_STOP_CHANCE=0.1  # 10% chance untuk stop random

# ============================================
# REKOMENDASI PENGGUNAAN
# ============================================
# 
# AMAN (Recommended):
# - MAX_PROFILES_PER_DAY=50
# - PROFILE_DELAY_MIN=10
# - PROFILE_DELAY_MAX=20
# - Hanya jalan jam kerja (9-17)
# - Hanya Senin-Jumat
#
# MODERATE (Agak Berisiko):
# - MAX_PROFILES_PER_DAY=100
# - PROFILE_DELAY_MIN=5
# - PROFILE_DELAY_MAX=10
#
# AGGRESSIVE (BAHAYA!):
# - MAX_PROFILES_PER_DAY=200+
# - PROFILE_DELAY_MIN=1
# - PROFILE_DELAY_MAX=3
# - Jalan 24/7
# ⚠️ TIDAK DIREKOMENDASIKAN! Akun bisa kena ban!
#
# ============================================
